{% extends 'base.html.twig' %}

{% block body %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Client</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/accueil">Accueil</a></li>
                        <li class="breadcrumb-item active">Client</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- /.card-header -->
    <!--suppress ALL -->
    <section class="content">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">Formulaire d'ajout d'un client</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-4">
                        <div class="col-12 col-sm-12">
                            <div class="form-group">
                                <label>Nom <span style="color: red;">*</span> :</label>
                                <div class="select2-purple">
                                    {{ form_widget(form.nomClient, {'attr': {'class':'form-control ','placeholder':'Saisir le nom de l\'personne', 'required':true} }) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12">
                            <div class="form-group">
                                <label>Prenom <span style="color: red;">*</span> :</label>
                                <div class="select2-purple">
                                    {{ form_widget(form.prenomClient,{'attr': {'class':'form-control ','placeholder':'Saisir le prenom de l\'personne', 'required':true} }) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12">
                            <div class="form-group">
                                <label>Email <span style="color: red;">*</span> :</label>
                                <div class="select2-purple">
                                    {{ form_widget(form.email, {'attr': {'class':'form-control ','placeholder':'Saisir le numéro de l\'personne', 'required':true} }) }}
                                </div>
                            </div>    
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="col-12 col-sm-12">
                            <div class="form-group">
                                <label>Telephone <span style="color: red;">*</span> :</label>
                                <div class="select2-purple">
                                    {{ form_widget(form.tel, {'attr': {'class':'form-control ','placeholder':'Saisir le numéro de l\'personne', 'required':true} }) }}
                                </div>
                            </div>
                        </div> 
                        <div class="col-12 col-sm-12">
                            <div class="form-group">
                                <label>Compagnie <span style="color: red;">*</span> :</label>
                                        <div class="select2-purple">
                                    {{ form_widget(form.compagni, {'attr': {'class':'form-control ','placeholder':'Saisir le nom de connexion', 'required':true} }) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12">
                            <div class="form-group">
                                <div class="select2-purple">
                                <label>Mot de passe<span style="color: red;">*</span>:</label>
                                    <div class="select2-purple">
                                        {{ form_widget(form.plainPassword, {'attr':{'class':'form-control ','placeholder':'Mot de passe'} }) }}
                                    </div>
                                </div>  
                            </div> 
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="col-12 col-sm-12">
                            <div class="form-group">
                                <label>Adresse <span style="color: red;">*</span> :</label>
                                <div class="select2-purple">
                                    {{ form_widget(form.adresse, {'attr': {'class':'form-control ','placeholder':'Saisir le numéro de l\'personne', 'required':true} }) }}
                                </div>
                            </div>
                        </div> 
                        <div class="col-12 col-sm-12">
                            <div class="form-group">
                                <label>Pays <span style="color: red;">*</span> :</label>
                                        <div class="select2-purple">
                                    {{ form_widget(form.pays, {'attr': {'class':'form-control ','placeholder':'Saisir le nom de connexion', 'required':true} }) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12">
                            <div class="form-group">
                                <div class="select2-purple">
                                <label>Projet<span style="color: red;">*</span>:</label>
                                    <div class="select2-purple">
                                        {{ form_widget(form.projets, {'attr':{'class':'form-control ','placeholder':'Mot de passe'} }) }}
                                    </div>
                                </div>  
                            </div> 
                        </div>
                    </div>
                    <div class="col-md-4">
                            <br>
                            <button type="submit" class="btn btn-primary ">Valider</button>
                            <a href="{{ path('liste_client') }}">
                            <button type="button" class="btn btn-danger ">Annuler</button>
                            </a>
                    
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Liste des Client</h3>
                </div>
                <div class="card-body" style="display: block;">
                {% for message in app.flashes('desactive') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    {{ message }}
                </div>
            {% endfor %} {% for message in app.flashes('active') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('register') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('suppression') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('notice') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    {{ message }}
                </div>
            {% endfor %}
                    <table id="table_utilisateur" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th class="text-center">Nom</th>
                            <th class="text-center">Prenom</th>
                            <th class="text-center">Email</th>
                            <th class="text-center">Adresse</th>
                            <th class="text-center">Pays </th>
                            <th class="text-center">Mot de passe</th>
                            <th class="text-center">Projets</th>
                            <th class="text-center">Compagnie</th>
                            <th class="text-center">Telephone</th>
                            <th class="text-center" width="19%" >Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for client in clients %}
                            <tr>
                                <td>{{ client.id }}</td>
                                <td>{{ client.nomClient }}</td>
                                <td>{{ client.prenomClient }}</td>
                                <td>{{ client.email }}</td>
                                <td>{{ client.adresse }}</td>
                                <td>{{ client.pays }}</td>
                                <td>{{ client.password }}</td>
                                <td>{{ client.projets }}</td>
                                <td>{{ client.compagni }}</td>
                                <td>{{ client.tel }}</td>
                                <td class="text-center">
                                    <a href="{{ path('edit_client',{'id':client.id}) }}">
                                        <button type="button" class="btn btn-outline-success btn-rounded"><i class="fas fa-pencil-alt">Edit</i></button>
                                    </a>
                                    <a href="{{ path('delete_client',{'id':client.id}) }}" id="delBtn"  data-toggle="modal">
                                        <button type="button" class="btn btn-outline-danger btn-rounded"><i class="fas fa-trash">Delete</i></button>
                                    </a>
                            </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
    <div class="modal fade" id="myModel" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <h4><b>Êtes-vous sûr de vouloir supprimer cet client ?</b></h4>
                <p>Cette action peut être annulée</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                <a  href="" type="button" class="btn btn-danger" id="delRef"><i class="fa fa-trash" aria-hidden="true"></i>Supprimer</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}